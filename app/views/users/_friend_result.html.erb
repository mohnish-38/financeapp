<div class="result-block">
  <%= render 'layouts/messages'%>
</div>
<% if @friends %>
  <div class="card card-header result-block">
    <table class="col-md-12">
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <strong>Name: </strong> <%= friend.fullname %><br>
            <strong>Email: </strong> <%= friend.email %> <br>
            <%= link_to "View Profile", '#',
                              class: "btn btn-sm btn-success " %> <br>
            <% if current_user.not_friends_with?(friend.id) %>
              <span>
                 <%= link_to 'Follow', friendships_path(friend: friend),
                              class: "btn btn-sm btn-success mt-1", method: :post %>
              </span>
             
            <% else %>
              <span class="badge badge-secondary">
                You are friends
              </span>
            <% end %>
          </tr>
          <hr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
